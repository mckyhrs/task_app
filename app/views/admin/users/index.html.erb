<div class="container">
<h1><%= t('.title') %></h1> 
<div class="row">
	<div class="col-10"></div>
	<div class="col-2">
	<%= link_to t('.new'), new_admin_user_path %>
	</div>
</div>
<div class="row">
	<table class="table table-bordered table-sm">
		<thead class="thead-light">
			<tr>
				<th scope="col"><%= t('activerecord.attributes.user.id') %></th>
				<th scope="col"><%= t('activerecord.attributes.user.user_name') %></th>
				<th scope="col"><%= t('activerecord.attributes.user.login_id') %></th>
				<th scope="col"><%= t('activerecord.attributes.user.role') %></th>
				<th scope="col"><%= t('activerecord.attributes.user.task_count') %></th>
				<th scope="col"></th>
				<th scope="col"></th>
			</tr>
		</thead>

	<% @users.each do |user| %>
		<tr>
			<td><%= user.id %></td>
			<td><%= user.user_name %></td>
			<td><%= link_to user.login_id %></td>
			<td><%= user.role_i18n %></td>
			<td><%= user.tasks.size %></td>
			<td><%= link_to t('.edit'), edit_admin_user_path(user) %></td>
			<td><%= link_to t('.delete'), [:admin, user], method: :delete %></td>
		</tr>
	<% end %>
	</table>
</div>
</div>